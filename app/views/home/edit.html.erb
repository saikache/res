<div class="row">
	<%= form_for @user, as: :user, url: home_update_path, method: :patch do |f| %>

		<div class="col-lg-4">
			<%= render partial: 'common/user_fields', locals: {f: f}%>
		</div>
		<div class="col-lg-2"></div>
		<div class="col-lg-4">
			<div class="form-group">
				<%= f.label :status%>
				<p class="user-info"> <%= is_active(@user.is_active) %> </p>
			</div>
			<div class="form-group">
				<%= f.label :email%>
				<p class="user-info">
					<%= @user.email%>
				</p>
			</div>
			<div class="form-group">
				<%= f.label :amount%>
				<p class="user-info">
					<%= @user.amount%>
				</p>
			</div>
			<div class="form-group">
				<%= f.label :card%>
				<p class="user-info">
					<%= @user.card.present? ? @user.card : "You don't have ATM card"%>
				</p>
			</div>
			<div class="form-group">
				<%= f.label :pin%>
				<p class="user-info">
					<%= @user.pin.present? ? @user.pin : "You don't have ATM pin"%>
				</p>
			</div>


		</div>
		<div class="col-lg-12 margin-top-bottom-20">
			<%= f.submit 'Update Profile', class: 'btn btn-success' %>
			<%= link_to "Home", root_path, class: 'btn btn-warning' %>
		</div>
	<% end %>
</div>
